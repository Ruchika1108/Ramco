<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hp.ramco">

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomePage" />
        <activity
            android:name=".ServicesPage"
            android:parentActivityName=".HomePage" />
        <activity
            android:name=".CustomerDetailsPage"
            android:parentActivityName=".HomePage" />
        <activity
            android:name=".ProductDetailsPage"
            android:parentActivityName=".CustomerDetailsPage" />
        <activity android:name=".Splash_Screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Thanking_Page" />
        <activity android:name=".FailurePage" />
        <activity
            android:name=".AboutUsPage"
            android:parentActivityName=".HomePage" />
        <activity android:name=".ViewOrder" />
        <activity android:name=".LoginPage" />
        <activity android:name=".UpdateStatusPage" />
        <activity android:name=".UpdatePage"></activity>
    </application>

</manifest>